<% placeholder = student? && !current_user.lesson_id.nil? ? 'Search for a course...' : 'What would you like to learn?' %>

<%= form_with url: courses_path(anchor: 'courses-all-section'), local: true, method: :get, html: { class: 'home-search search-bar my-2 my-lg-0 w-50' } do |form| %>
  <%= form.text_field :search, 
    value: params[:search], 
    placeholder: placeholder, 
    data: { behavior: 'autocomplete', 
            controller: 'static_pages', 
            action: 'home' }, 
    class: 'form-control' %>
<% end %>
