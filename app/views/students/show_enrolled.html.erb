<% if student? && current_user?(@student) %>
  <% header_prefix = "My" %>
<% else %>
  <% header_prefix = "#{@student.name}'s" %>
<% end %>

<% provide(:title, "Enrolled Courses") %>

<h1><%= header_prefix %> Enrolled Courses</h1>
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th></th>
    <th scope="col">Tutor</th>
  </tr>
  </thead>
  <tbody>
    <%= render @courses %>
  </tbody>
</table>
<%= will_paginate @courses, class: "pagination" %>
