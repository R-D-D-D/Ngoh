<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="rating">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write your review here...", class: 'form-control' %>
  </div>
  <%= hidden_field_tag :course_id, @course.id %>
  <%= f.button "Post Review", type: :submit, class: 'btn btn-primary' %>
<% end %>
