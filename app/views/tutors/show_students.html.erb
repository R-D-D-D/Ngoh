<% if tutor? && current_user?(@tutor) %>
  <% header_prefix = "My" %>
<% else %>
  <% header_prefix = "#{@tutor.name}'s" %>
<% end %>

<% provide(:title, "Students") %>
<h1><%= header_prefix %> Students</h1>

<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Student</th>
  </tr>
  </thead>
  <tbody>
    <%= render @students %>
  </tbody>
</table>

<%= will_paginate @students, class: 'pagination' %>
