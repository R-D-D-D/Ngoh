<!-- team member -->
<div class="col-md-6 col-lg-3 my-3 p5">
  <div class="card height-10">
    <%= image_tag 'tutor.jpg', class: 'card-img-top' %>
    <div class="card-body p-3">
      <h5 class="card-title text-capitalize mb-1">
        <%= link_to tutor.name, tutor %>
      </h5>
      <% if logged_in? && current_user.admin? && !current_user?(tutor) %>
        | <%= link_to "delete", tutor, method: :delete, data: { confirm: "Are you sure?" },
          class: 'btn btn-secondary btn-sm' %>
      <% end %>
    </div>
    <div class="card-footer bg-light d-flex justify-content-start">
      <p class="text-center text-small">Specialize in: Piano</p>
    </div>
  </div>
</div>
<!-- end of team member -->


