<div class="col-md-6 col-lg-3 my-3 p5" align="center">
  <div class="tutor-card card height-10 shadow-sm">

    <span class="card-img-top">
      <%= gravatar_for(tutor, size: 100) %>
    </span>

    <div class="card-body p-3">

      <h5 class="name card-title text-capitalize mb-1 center">
        <strong><%= link_to tutor.name, tutor, class: 'stretched-link' %></strong>
      </h5>

      <div class="row justify-content-center">
        <div class="col-auto">
          <span class="tutor-rating">
            <% tutor.rating.times do %>
              <%= image_tag "tutor-rating.png" %>
            <% end %>
          </span>
        </div>
        
      </div>

      <div class="row justify-content-center">
        <div class="tutor-students col" align="center">
          <strong><%= tutor.students_unique.count %></strong><br>
          students
        </div>
        <div class="tutor-courses col" align="center">
          <strong><%= tutor.courses.count %></strong><br>
          courses
        </div>
      </div>

      <div class="tutor-qualification row justify-content-center">
        <div class="col">
          <small><%= tutor.qualification %></small>
        </div>
      </div>

      <% if logged_in? && current_user.admin? && !current_user?(tutor) %>
        <%= link_to "delete", tutor, method: :delete, data: { confirm: "Are you sure?" },
          class: 'btn btn-outline-secondary btn-sm' %>
      <% end %>

    </div>

  </div>
</div>
