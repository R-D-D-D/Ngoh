<% if tutor? && current_user?(@tutor) %>
  <% header_prefix = "My" %>
<% else %>
  <% header_prefix = "#{@tutor.name}'s" %>
<% end %>

<% provide(:title, "Courses") %>
<h1><%= header_prefix %> Courses</h1>

<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Title</th>
  </tr>
  </thead>
  <tbody>
    <%= render @courses %>
  </tbody>
</table>

<%= will_paginate @courses, class: 'pagination' %>
