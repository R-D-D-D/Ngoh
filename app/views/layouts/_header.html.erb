<% if yield(:title) == "Home" && !student? %>

  <div class="container-fluid">

    <div class="row" style="height: 56px;">
      <div class="col pb-0">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
          <%= render 'layouts/navbar' %>
        </nav>
      </div>
    </div>

    <% if !flash.empty? %>
      <div class="home-flash row">
        <div class="col-md-8 offset-md-1 mt-5">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>" style="word-wrap: break-word;"><%= message %></div>
          <% end %>
        </div>
        <div class="col-md-1">
        </div>
      </div>
    <% end %>

  </div>

<% elsif yield(:title) == 'Home' && student? %>

  <div class="container-fluid home-student-bg" style="height:55vh;">

    <div class="row">
      <div class="col">
        <nav class="navbar navbar-expand-lg navbar-dark" id="home-nav">
          <%= render 'layouts/navbar' %>
        </nav>
      </div>
    </div>

    <% if !flash.empty? %>
      <div class="home-flash row">
        <div class="col-md-8 offset-md-1 mt-5">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>" style="word-wrap: break-word;"><%= message %></div>
          <% end %>
        </div>
        <div class="col-md-1">
        </div>
      </div>
    <% end %>

    <div class="home-text row" id="home-text">

      <div class="col offset-md-1">

        <h1 class="text-light text-left mb-3" style="margin-top:2%;">
          <%= "Welcome Back!" %>, <%= current_user.name %>!
        </h1>
        
        <%= render 'static_pages/home_search' %>

      </div>

    </div>

  </div>

<% else %>

  <div class="container-fluid">
    <div class="row">
      <div class="col pb-0">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
          <%= render 'layouts/navbar' %>
        </nav>
      </div>
    </div>
  </div>

<% end %>
