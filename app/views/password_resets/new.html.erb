<% provide(:title, "Forgot Password") %>
<% provide(:select_header, "I am a...") %>

<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>

      <%= render 'shared/student_tutor_select', f: f %>

      <div class="form-group">
        <%= f.label :email, "Please enter your email below to reset your password." %>
        <% if params[:error] == 'email not found' %>
          <%= f.email_field :email, class: 'form-control is-invalid' %>
          <div class="invalid-feedback d-block">
            email address not found
          </div>
        <% else %>
          <%= f.email_field :email, class: 'form-control' %>
        <% end %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
