<% provide(:title, "Delete Course") %>

<div class="row center delete_course justify-content-center">

  <h1 class="warning-one"><b>Are you sure you want to delete this course?</b></h1>
  <h3>
    All your lessons and students for this course will be lost.<br>
    <b>This action is irreversible.</b>
  </h3>
</div>
<div class="row justify-content-center">
  <h2><strong>Course: <%= @course.title %></strong></h2>
</div>

<section class="center buttons-delete">
  <%=
    link_to "Yes, delete this course.",
            courses_delete_path(course_id: @course.id),
            method: :delete,
            class: 'btn btn-danger btn-agree'
  %>
  <%=
    link_to "No, I've changed my mind.",
            edit_course_path(@course, course_id: @course.id),
            class: 'btn btn-secondary'
  %>
</section>

</div>
