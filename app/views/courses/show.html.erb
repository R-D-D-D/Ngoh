<% provide(:title, @course.title) %>

<div class="row">
  <div class="col">
    <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
      <li class="nav-item">

        <% if params[:lesson_page] %>
          <a class="nav-link" id="course-tab" data-toggle="tab" href="#course" role="tab" aria-controls="course" aria-selected="true">Course</a>
        <% else %>
          <a class="nav-link active" id="course-tab" data-toggle="tab" href="#course" role="tab" aria-controls="course" aria-selected="true">Course</a>
        <% end %>

      </li>
      <li class="nav-item">

        <% if params[:lesson_page] %>
          <a class="nav-link active" id="lessons-tab" data-toggle="tab" href="#lessons" role="tab" aria-controls="lessons" aria-selected="false">Lessons</a>
        <% else %>
          <a class="nav-link" id="lessons-tab" data-toggle="tab" href="#lessons" role="tab" aria-controls="lessons" aria-selected="false">Lessons</a>
        <% end %>

      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="tab-content" id="myTabContent">

      <% if params[:lesson_page] %>
        <div class="tab-pane fade show" id="course" role="tabpanel" aria-labelledby="course-tab">
        <% else %>
          <div class="tab-pane fade show active" id="course" role="tabpanel" aria-labelledby="course-tab">
          <% end %>

          <div class="show_course row justify-content-center pt-3">
            <div class="col-md-10">
              <%= render 'courses/show_course' %>
            </div>
          </div>

          </div>

          <% if params[:lesson_page] %>
            <div class="tab-pane fade show  active" id="lessons" role="tabpanel" aria-labelledby="lessons-tab">
            <% else %>
              <div class="tab-pane fade show" id="lessons" role="tabpanel" aria-labelledby="lessons-tab">
              <% end %>

              <div class="show_lesson row justify-content-center pt-3">
                <div class="col">
                  <%= render 'courses/show_lesson' %>
                </div>
              </div>

              </div>

            </div>
        </div>
    </div>
