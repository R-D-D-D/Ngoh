<% provide(:title, @course.title) %>

<div class="row">
  <div class="col">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">

        <% if params[:lesson_page] %>
          <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Course</a>
        <% else %>
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Course</a>
        <% end %>

      </li>
      <li class="nav-item">

        <% if params[:lesson_page] %>
          <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Lessons</a>
        <% else %>
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Lessons</a>
        <% end %>

      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="tab-content" id="myTabContent">

      <% if params[:lesson_page] %>
        <div class="tab-pane fade show" id="home" role="tabpanel" aria-labelledby="home-tab">
        <% else %>
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <% end %>

          <div class="row justify-content-center pt-3">
            <div class="col-md-10">
              <%= render 'courses/show_course' %>
            </div>
          </div>

          </div>

          <% if params[:lesson_page] %>
            <div class="tab-pane fade show  active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <% else %>
              <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              <% end %>

              <%= render 'courses/show_lesson' %>

              </div>

            </div>
        </div>
    </div>
