<!--All Courses Page-->
<% provide(:title, @title) %>

<!--Page Header Title-->
<h1 class="course-index-title">
  <strong><%= @title %></strong>
</h1>

<!--Search Bar-->
<%= form_with url: courses_path, local: true, method: :get, html: { class: "search-bar my-2 my-lg-0 w-100" } do |f| %>
  <%= f.text_field :search, value: params[:search], placeholder: "Search for a course...", class: "form-control w-50 mx-auto" %>
<% end %>

<% if params[:search] %>
  <h3 class="text-left">
    <strong>Results:</strong>
  </h3>
<% end %>

<!--Courses-->
<% if @courses.any? %>

  <%= render 'shared/sort_courses' %>

  <div class="row">
    <%= render @courses %>
  </div>

  <%= will_paginate @courses, class: "pagination" %>

<% else %>

  <h3 class="mt-4 course-index-none">
    <strong>No courses found...</strong>
  </h3>

<% end %>
