<div class="container">

  <section>
    <h1 class="title"><strong><%= @course.title %></strong></h1>
    <% if tutor? && current_user?(@course.tutor) %>
      <%= link_to "Edit Course", edit_course_path(@course), class: 'btn btn-default btn-course-edit' %>
    <% end %>

    <% if @course.image.attached? %>
      <%= image_tag @course.image.variant(resize_to_limit: "300x300"), class: "image" %>
    <% end %>

    <h2 class="content"><%= @course.content %></h2>

    <%= 
      link_to gravatar_for(@course.tutor, size: 80), 
        tutor_path(@course.tutor), 
        class: 'course_tutor_gravatar' 
      %>
    <h2 class="course_tutor">
      <strong>Tutor</strong><br>
      <%= link_to "#{@course.tutor.name}", tutor_path(@course.tutor) %>
    </h2>

    <% unless tutor? %>
      <%= render 'courses/subscribe_form', course: @course %>
    <% end %>
  </section>

</div>

