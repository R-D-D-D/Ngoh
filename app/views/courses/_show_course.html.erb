<div class="row">
  <div class="col">
    <h1>
      <%= @course.title %>
    </h1>
  </div>
</div>
<div class="row justify-content-start">
  <div class="col-6">
    <h2 class="text-left">It's specialty:</h2>
    <% @course.tags.each do |tag| %>
      <p class="btn btn-secondary btn-sm"><%= tag.name %></p>
    <% end %>
  </div>
</div>

<% if tutor? && current_user?(@course.tutor) %>
  <%=
    link_to "Edit Course",
            edit_course_path(@course,
                             course_id: @course.id,
                             page: params[:page]),
            class: 'btn btn-secondary'
  %>
<% end %>

<% unless course_owner?(@course) %>
  <%= render 'courses/subscribe_form', course: @course, class: 'btn-course-subscribe' %>
<% end %>

<% if @course.image.attached? %>
  <%= image_tag @course.image.variant(resize: "300x300"), class: "image" %>
<% end %>

<h2 class="content mt-2">
  <%= @course.content %>
</h2>

<%=
  link_to gravatar_for(@course.tutor, size: 80),
          tutor_path(@course.tutor),
          class: 'course_tutor_gravatar'
%>
<h2 class="course_tutor row justify-content-start">
  <strong>Tutor:</strong>
  <%= link_to "#{@course.tutor.name}", tutor_path(@course.tutor) %>
</h2>
