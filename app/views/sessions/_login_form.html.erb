<%= form_for(:session, url: yield(:url_path)) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
  <% end %>

  <%= f.submit "Log In", class: "btn btn-primary" %>

  <section class="under-submit-text">
    <span class="pull-left">
      Not yet a <%= yield(:type) %>? 
      <%= link_to "Sign up now!", yield(:signup_path) %>
    </span>

    <span class="pull-right">
      <%= link_to "Forgot your password?", new_password_reset_path(user_type: yield(:type)) %>
    </span>
  </section>

<% end %>
